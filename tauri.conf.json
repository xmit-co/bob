{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Bob",
    "version": "0.1.0",
    "identifier": "com.tauri.dev",
    "build": {
        "frontendDist": "dist",
        "devUrl": "http://localhost:8080",
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build"
    },
    "app": {
        "windows": [
            {
                "title": "Bob",
                "width": 400,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all"
    }
}
